<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6">
      <section>
        <p id="notice"><%= notice %></p>
        <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
          <div class="box col6">
            <p>
              <strong>Title:</strong>
              <%= @recipes.title %>
            </p>
            <p>
              <img src="http://www.epicurious.com<%= @recipes.image %>">
            </p>
            <p>
              <strong>Ingredients:</strong>
              <%= @ingredients %>
            </p>
            <strong>Preparation:</strong>
            <%= @preparation %>
          </p>
          <%= link_to 'Back', root_path %>
          <audio id="recipeclip" src='https://s3.amazonaws.com/tennis-testing/app/assets/audios/<%="#{@title}"%>.mp3' controls autoplay>"HTML5 Audio"</audio>
        </section>
      </div>
      <div class="col-lg-4">
        <div id="content">
          <video id="webcam" autoplay width="480" height="480"></video>
          <video id="video-demo" controls="controls" poster="/assets/jsdetection.jpg" width="640" height="480"
               onclick="if(/Android/.test(navigator.userAgent))this.play();">
            <source src="/assets/jsdetection.mp4" type="video/mp4"/>
            <source src="/assets/jsdetection.ogg" type="video/ogg"/>
            <source src="/assets/jsdetection.webm" type="video/webm"/>
            Your browser doesn't support the HTML5 video tag.
          </video>
          <canvas id="canvas-source" width="480" height="480"></canvas>
          <canvas id="canvas-highlights" width="480" height="480"></canvas>
          <canvas id="canvas-blended" width="480" height="480"></canvas>
          <div id="hotSpots">
            <div id="one"></div>
            <div id="another"></div>
          </div>
        </div>
        <div class="loading">Loading assets...</div>
        <div class="backFromVideo"><a href="#">Back<a/></div>
          <div class="introduction">
            <p>This demo lets you control stuff using motion detection in your browser.</p>
            <p>Please allow access to your camera and microphone above.</p>
          </div>
          <div class="browsers">
            <p>This demo lets you control stuff using motion detection in your browser.</p>
            <p>Install
              <a href="https://www.google.com/landing/chrome/beta/" target="_blank">Chrome Beta</a>
              to play, or
              <a
                href="#" id="watchVideo">watch this video</a>
              to check it out first.</p>
          </div>
        </div>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
        <script src="/assets/app.js"></script>
        <script src="/assets/sample.js"></script>
      </div>
    </div>
  </div>
</div>
