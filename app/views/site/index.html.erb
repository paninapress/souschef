<div class="bgSizeCover container-fluid" data-stellar-background-ratio="0.5">
  <p class="center" id="search_bar">Let SousChef read the recipe while you cook.</p>
  <%= form_tag search_path, :class => "center" do %>
    <%= label_tag() %>
    <%= text_field_tag(:food, "Search recipes...") %><br>
    <%= submit_tag("Search")%>
  <% end %>
</div>
<div class="panel2" data-stellar-background-ratio="0.5">
  <div class="container-fluid">
    <span>
      <h1 id="panel2" class="center">Focus more on cooking by not having to look at a recipe. No more
      	swiping your smartphone with a greasy hand. No more spilled drinks on your Mac. Now you
      	can enjoy listening to your favorite recipe while you cook.</h1>
    </span>

  </div>
</div>
<div class="panel3" data-stellar-background-ratio="0.4">
  <% @siterecipes.each do |recipe| %>
    <div id="masonry-container">
      <div class="box col3">
        <%= recipe.title %>
        <br>
        <a href="<%= site_path(recipe)%>"><img src="http://www.epicurious.com<%= recipe.image %>"></a>
        <br>
        <%= truncate(recipe.source, length: 100, omission: '... (more)')%>
        <br>
      </div>
    </div>
  <% end %>
</div>


