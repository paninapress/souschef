<div class="container-fluid">
  <div class="row">
    <div class="span12 center">
      <section>
        <p id="notice"><%= notice %></p>
        <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
          <div class="box col7">
            <p>
              <strong>Title:</strong>
              <%= @recipes.title %>
            </p>
            <p>

           <img src="http://www.epicurious.com<%= @recipes.image %>">

            </p>
            <p>
              <strong>Ingredients:</strong>
              <%= @ingredients %>
            </p>
             <strong>Preparation:</strong>
              <%= @preparation %>
            </p>
            <%= link_to 'Back', root_path %>
           
<script type="text/javascript">
            function playrecipe() {
           
       document.getElementById('recipeclip').play();

    if (document.getElementById('recipeclip').currentTime > 0  {
                  document.getElementById('recipeclip').stop();
      }
         };
           </script>
<input onwebkitspeechchange="playrecipe()" x-webkit-speech />
            <audio id="recipeclip" src='https://s3.amazonaws.com/tennis-testing/app/assets/audios/<%="#{@title}"%>.mp3' controls autoplay>"HTML5 Audio"</audio>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>
