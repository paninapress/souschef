<h1>Comments</h1>

<%= render 'comments' %>

<p><%= link_to "New Comment", [:new, @commentable, :comment] %></p>

<div></div>

<p>Averate rating</p>
<div id="star"></div>

<p>Your rating</p>
<div id="user_star"></div>


 <script>
  $('#star').raty({
    readOnly: true,
    score: <%= @recipes.average_rating %>,
    path: '/assets/'
  });

  $('#user_star').raty({
    score: <%= @rating.score %>,
    path: '/assets/',
    click: function(score, evt) {
      $.ajax({
        url: '/ratings/' + <%= @rating.id %>,
        type: 'PATCH',
        data: { score: score }
      });
    }
  });
</script>
