<h2>Users that joined</h2>
<table style="width: 100%">
  <thead>
    <tr>
      <th>User</th>
      <th># Recipes</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.email, profile_path(user) %></td>
        <td><%= user.my_recipes.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>
