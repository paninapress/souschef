<div class="container-fluid">
  <div class="row">
    <div class="span12 center">
      <h2>Sign up</h2>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div><%= f.label :email %><br />
          <%= f.email_field :email, :autofocus => true, placeholder: 'Email Address' %></div>
        <div><%= f.label :password %><br />
          <%= f.password_field :password, :autofocus => true, placeholder: 'Password' %></div>
        <div><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, :autofocus => true, placeholder: 'Password Confirmation' %></div>
        <div><%= f.submit "Sign up", class: "form_button" %></div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
