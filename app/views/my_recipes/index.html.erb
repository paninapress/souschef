<h2>Your recipes</h2>
<%= link_to 'New Recipe', new_my_recipe_path, class: 'button' %>
<br>
<% @myrecipes.each do |recipe| %>
  <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
    <div class="box col4">
      <%= recipe.title %>
      <%= truncate(recipe.description, length: 100, omission: '... (continued)')%>
      <%= image_tag recipe.photo_url %>
      <%= link_to 'Show', recipe %>
      <%= link_to 'Edit', edit_my_recipe_path(recipe) %>
      <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>
<%= paginate @myrecipes %>
